---
import { skills } from "../../../cv.json";
import Tag from "../../components/react/Tag";
---

<section
id="habilidades"
  class="flex items-center flex-col justify-center w-full gap-5 pt-14 pb-14"
>
  <div
    class="flex
        justify-start
        items-center
        p-1
        sm:w-full
        sm:pl-4
        md:w-[850px]"
  >
    <label for="" class="text-white font-semibold text-2xl">Habilidades</label>
  </div>
  <div class="grid
        grid-cols-1
        sm:grid-cols-6
        gap-2">
    {skills.map((sk) => <Tag tag={sk.name} iconKey={sk.name} />)}
  </div>
</section>
